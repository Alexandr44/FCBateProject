<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="4dp"
    android:padding="8dp"
    android:background="@drawable/home_table_background">

    <TextView
        android:id="@+id/match_online_rv_item_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:layout_weight="1"
        tools:text="85" />

    <TextView
        android:id="@+id/match_online_rv_item_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@android:color/white"
        android:layout_weight="10"
        tools:text="Такой-то такой-тович прорывается и забивает гооооол!!! Это победа!!!" />

</LinearLayout>