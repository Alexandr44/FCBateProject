<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".teamdetail.ui.TeamDetailFragment"
    android:background="@drawable/background_gradient">

    <ImageView
        android:id="@+id/team_detail_photo"
        android:layout_width="0dp"
        android:layout_height="@dimen/team_details_image_height"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/view"
        android:src="@drawable/photo_placeholder"
        />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="@dimen/team_details_image_height"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_corners_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/team_detail_photo"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/team_detail_text_fio"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/defaultBlueFontColor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        android:lines="3"
        />

    <TextView
        android:id="@+id/team_detail_text_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/defaultBlueFontColor"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toBottomOf="@+id/team_detail_text_fio"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        />

    <TextView
        android:id="@+id/team_detail_text_spec"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/defaultBlueFontColor"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toBottomOf="@+id/team_detail_text_number"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        />

    <TextView
        android:id="@+id/team_detail_text_params"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/defaultBlueFontColor"
        android:textSize="16sp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintTop_toBottomOf="@+id/team_detail_text_spec"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        android:lines="3"
        />

    <TextView
        android:id="@+id/team_detail_text_country"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/defaultBlueFontColor"
        android:textSize="16sp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.1"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layoutMode="opticalBounds"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/team_details_margin_top"
            android:layout_marginBottom="10dp"
            android:background="@drawable/home_table_background">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/team_detail_tab_layout"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="top|start|end"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                app:tabMode="fixed"
                app:tabGravity="fill"
                app:tabSelectedTextColor="@color/defaultYellow"
                app:tabTextColor="#fff"
                android:background="@android:color/transparent"
                />

            <com.alex44.fcbate.common.ui.ViewPagerExt
                android:id="@+id/team_detail_pager"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>