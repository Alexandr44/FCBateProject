<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".news.ui.NewsPagerItemFragment"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/team_rv_item_photo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/defaultYellow"
            android:layout_alignBottom="@+id/team_rv_item_photo"
            android:layout_alignTop="@+id/news_rv_item_last_name"
            />

        <TextView
            android:id="@+id/news_rv_item_last_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultBlueFontColor"
            android:textSize="19sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Фамилия"
            android:gravity="center_horizontal"
            android:paddingTop="4dp"
            android:layout_above="@+id/news_rv_item_first_name"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/news_rv_item_first_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultBlueFontColor"
            android:textSize="17sp"
            android:text="Имя"
            android:gravity="center_horizontal"
            android:layout_above="@+id/news_rv_item_info"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

        <TextView
            android:id="@+id/news_rv_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultBlueFontColor"
            android:textSize="20sp"
            android:textAllCaps="true"
            android:text="25"
            android:paddingBottom="4dp"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@+id/team_rv_item_photo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>